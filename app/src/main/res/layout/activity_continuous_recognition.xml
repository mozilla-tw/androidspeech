<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <View
        android:focusableInTouchMode="true"
        android:id="@+id/toolbar_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8068EE"
        app:layout_constraintTop_toTopOf="@id/fab"
        app:layout_constraintBottom_toBottomOf="@id/fab"/>

    <View
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/fab"
        app:layout_constraintBottom_toBottomOf="@id/fab"
        app:layout_constraintStart_toStartOf="@id/fab"
        app:layout_constraintEnd_toEndOf="@id/fab"/>

    <ImageView
        android:id="@+id/clear_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_delete"
        android:tint="#8068EE"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="24dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_mic"
        android:tint="@android:color/white"
        android:backgroundTint="#8068EE"
        app:borderWidth="0dp"
        android:scaleType="centerInside"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/reset_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_reset"
        android:tint="#8068EE"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/clear_btn"
        android:layout_margin="24dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/go_to_bottom_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_vertical_align_bottom"
        android:tint="#8068EE"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/clear_btn"
        android:layout_margin="24dp"/>

    <ImageView
        android:id="@+id/share_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_share"
        android:tint="#8068EE"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fab"
        android:layout_margin="24dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <com.gauravk.audiovisualizer.visualizer.WaveVisualizer
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/blast"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        custom:avDensity="0.8"
        custom:avType="outline"
        custom:avColor="#8068EE"
        custom:avGravity="top"/>

    <com.mozilla.speechapp.CursorAwareEditText
        android:id="@+id/output"
        android:textSize="36sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="bottom"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:scrollbars="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/blast"
        app:layout_constraintBottom_toTopOf="@id/fab"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_gradient"
        app:layout_constraintTop_toTopOf="@id/output"/>


</android.support.constraint.ConstraintLayout>